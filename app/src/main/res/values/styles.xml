<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item><!-- app branding color for the app bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- darker variant for the status bar and contextual app bars -->
        <item name="colorAccent">@color/colorAccent</item><!-- theme UI controls like checkboxes, text fields, and floating action button -->
        <item name="colorControlNormal">@color/colorControlNormal</item><!-- normal state of unchecked controls -->
        <item name="colorControlActivated">@color/colorControlActivated</item><!-- overrides colorAccent on activated/checked UI controls -->
        <item name="colorControlHighlight">@color/colorControlHighlight</item><!-- ripple coloring -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="ScreenHeading" parent="AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextInput" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextInputLabel" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextInputLabel</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextSubHint" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextSubHint</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="DatePickerButton" parent="@android:style/Widget.Button">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:width">175sp</item>
        <item name="android:textColor">@color/colorTextSubdued</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>


</resources>
